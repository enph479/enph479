<Page x:Class="Redbolts.DockableUITest.UI.DockPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Name="MyDockPage"
      Title="Test Dock"
      Width="300"
      Height="600"
      d:DesignHeight="600"
      d:DesignWidth="300"
      mc:Ignorable="d">
    <Grid Background="DeepSkyBlue" Name="MyGrid">        
        <Button Content="Update" HorizontalAlignment="Left" Margin="34,184,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Left" Height="23" Margin="34,136,0,0" TextWrapping="Wrap" Text="{Binding Path=Counter}" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Page>
